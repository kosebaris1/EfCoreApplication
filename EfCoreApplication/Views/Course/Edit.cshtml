@model Course

<div class="container mt-5">
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-header bg-primary text-white fs-5 fw-semibold">
            Kurs Bilgilerini Güncelle
        </div>
        <div class="card-body">
            <form asp-controller="Course" asp-action="Edit" method="post">
                <input type="hidden" asp-for="CourseId" />

                <!-- Ad & Soyad -->
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Title" class="form-label">Kurs Başlık</label>
                        <input asp-for="Title" class="form-control" placeholder="Kursun adı" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                   
                <!-- Güncelleme Butonu -->
                <div class="text-end">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Güncelle
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
