@model CourseRegistration

<div class="container mt-4">
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-header bg-success text-white fs-5 fw-semibold">
            Kurs Kayıt Ekleme
        </div>
        <div class="card-body">
            <form asp-controller="CourseRegistration" asp-action="Create" method="post">
                <div class="row mb-4">
                    <div class="col-md-6">
                        <label asp-for="StudentId" class="form-label">Öğrenci Seçiniz</label>
                        <select asp-for="StudentId" asp-items="ViewBag.Students" class="form-select" required>
                            <option value="">Seçiniz</option>
                        </select>
                        <span asp-validation-for="StudentId" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="CourseId" class="form-label">Kurs Seçiniz</label>
                        <select asp-for="CourseId" asp-items="ViewBag.Courses" class="form-select" required>
                            <option value="">Seçiniz</option>
                        </select>
                        <span asp-validation-for="CourseId" class="text-danger"></span>
                    </div>
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>